<% layout("/layouts/boiler.ejs") %>

<div class="row mt-3">
<p><h1 class="col-4 offset-4 mb-2 bg-light text-danger" >Sign-Up Page</h1></p>
    

<div class="col-6 offset-3 mt-3">
<form action="/signup" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="username" class="form-label;">Username</label>
        <input type="text" name="username" id="username" class="form-control" required />
        <div class="valid-feedback">Username Looks Good</div>
        <div class="invalid-feedback">Please fill user-name</div>
      </div>


      <div class="mb-3">
        <label for="email" class="form-label;">Email</label>
        <input type="email" name="email" id="email" class="form-control" required />
        <div class="valid-feedback">Email Looks Good</div>
        <div class="invalid-feedback">Please fill email-id</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label;">Password</label>
        <input type="password" name="password" id="password" class="form-control" required />
        <div class="valid-feedback">Password Looks Good</div>
        <div class="invalid-feedback">Please fill Password</div>
      </div>
      <button class="btn btn-success">Sign-Up</button>


</form>

</div>



</div>